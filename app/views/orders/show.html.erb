<section class="orders-show">

  <header class="page-header">
    <h1>Order #<%= @order.id %></h1>
    <h4><%= @email %></h4>
  </header>

<!--
 - The items in the order and:
 - Their image, name and description
 - Their respective quantities and line item totals
 - The final amount for the order
 - The email that was used
 -->

  <div class="panel panel-default items">
    <table class="table table-bordered">
      <thead>
        <tr>
          <th colspan="2">Product</th>
          <th>Unit Price</th>
          <th>Quantity</th>
          <th>Price</th>
        </tr>
      </thead>
      <tbody>

        <% for i in 1...@products.length %>
          <%= render 'item', product: @products[i], item: @line_items[i] %>
        <% end %>

      </tbody>
      <tfoot>
        <tr>
          <th colspan="4">
            TOTAL:
          </th>
          <th>
            <%= @order.total_cents / 100.0 %>
          </th>
        </tr>
      </tfoot>
    </table>
  </div>

<div class="order-summary jumbotron">
  <h4>Thank you for your order!</h4>
</div>

  <%= link_to "Continue Shopping", root_path, class: 'btn btn-lg btn-primary' %>

</section>
