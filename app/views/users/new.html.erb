<h1>Sign Up</h1>

<%= form_for @user do |form| %>
  <div>
    <%= form.label :first_name %>
    <%= form.text_field :first_name, autofocus: true %>
  </div>
  <div>
    <%= form.label :last_name %>
    <%= form.text_field :last_name %>
  </div>
  <div>
    <%= form.label :email %>
    <%= form.text_field :email %>
  </div>

  <div>
    <%= form.label :password %>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Sign up!" %>
  </div>
<% end %>